@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>ALL CLIENTS</h1>
<hr />
@if (@Model.Count == 0)
{
  <h3>You have not listed any clients yet!</h3>
} 

@foreach (Client client in Model)
{
  <h4>+ @Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId }) | @client.Stylist.StylistName</h4>
}
<hr />
<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>