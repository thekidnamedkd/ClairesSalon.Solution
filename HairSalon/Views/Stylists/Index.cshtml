@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>All Stylists</h1>
<hr />
@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <h4>+ @Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</h4>
}
<hr />
<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Return home", "Index", "Home")</p>