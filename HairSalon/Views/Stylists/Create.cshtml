@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>ADD STYLIST</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.Label("Stylist Name: ")
    <br>
    @Html.TextBoxFor(model => model.StylistName, new {type="text", required="required", @class="form-control"})
    <br>
    <input type="submit" value="Save" class="btn btn-warning">
}
<hr />
<p>@Html.ActionLink("Return to all stylists", "Index")</p>
